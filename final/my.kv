<Button>
    size_hint: (0.2, 0.2)

<LoginPage>:
    name: "login"
    username: username
    password: password
    

    FloatLayout:
        Label:
            text: "Please Sign In/ Register"
            font_size: 60
            pos_hint:{"x":0, "y":0.3}
        
        Label:
            text: "Username: "
            font_size: 30
            pos_hint:{'x':-0.3, 'y':0.09}
          

        TextInput:
            id: username
            multiline: False
            size_hint: (0.5,0.08)
            pos_hint:{'x':0.3, 'y':0.55}
            hint_text: 'Enter Username'
            font_size: 24
        
        Label:
            text: "Password: "
            font_size: 30
            pos_hint:{'x':-0.3, 'y':-0.11}
        TextInput:
            id: password
            multiline: False
            size_hint: (0.5,0.08)
            pos_hint:{'x':0.3, 'y':0.35}
            hint_text: 'Enter Password'
            password: True
            font_size: 24

		Button:
            id: Login
			text: "Login/ Register"
            font_size: 20
            size_hint: (0.2,0.13)
            pos_hint:{"x":0.38, "y":0.1}
			on_press: root.press()

			

